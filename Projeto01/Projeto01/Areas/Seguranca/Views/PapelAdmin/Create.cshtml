@model string

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registrando um NOVO PAPEL";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card border border-primary">
        <div class="card-header text-uppercase text-white font-weight-bold bg-primary">
            Registro de um NOVO PAPEL
        </div>
        <div class="panel-body">
                <div class="form-group mt-2">
                    <div class="col-md-10">
                        <label>Nome</label>
                        <input name="nome" value="@Model" class="form-control" />
                    </div>
                </div>
        </div>
        <div class="card-footer bg-light">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar Papel" class="btn btn-danger" />
                @Html.ActionLink("Retornar para a listagem de PAPÉIS", "Index", null, new { @class = "btn btn-warning" })
            </div>
            <br />
            <br />
        </div>
    </div>
}