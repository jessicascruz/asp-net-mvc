@model Projeto01.Areas.Seguranca.Data.LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Acessando o sistema";
}

<div class="container">
<div class="row d-flex justify-content-center">
    <div class="col-md-5 ">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card border border-primary">
        <div class="card-header text-uppercase text-white font-weight-bold bg-primary">
            Acessando o sistema
        </div>
        <div class="card-body">
                @if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Count() > 0))
                {
                    <div class="alert alert-danger alert-dismissable">
                        @Html.ValidationSummary(false, "Verifique os seguintes erros:")
                    </div>
                }
                <div class="form-group">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "ml-3" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "ml-3" })
                    <div class="col-md-10">
                        @* @Html.PasswordFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } }) *@
                        @Html.PasswordFor(model => model.Senha, new  { @class = "form-control"  })
                        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                    </div>
                </div>
        </div>
        <div class="card-footer bg-light">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Acessar" class="btn btn-success col-md-11" />
            </div>
            @* <br />
            <br /> *@
        </div>
    </div>
}

</div>
</div>
</div>