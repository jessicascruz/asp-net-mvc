<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            @Html.ActionLink("Nome do aplicativo", "Index", "Index", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#conteudoNavbarSuportado" aria-controls="conteudoNavbarSuportado" aria-expanded="false" aria-label="Alterna navegação">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li id="liHome" class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Categorias")">Categorias</a>
                    </li>
                    <li id="liFabricantes" class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Fabricantes")">Fabricantes</a>
                    </li>
                    <li id="liProdutos" class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Produtos")">Produtos</a>
                    </li>
                </ul>
            </div>

        </div>
    </div>
    <div class="container mt-5">
        @RenderBody()
        <hr />
        <footer class="navbar navbar-expand-lg navbar-dark bg-dark fixed-bottom d-flex justify-content-center">
            <p class="text-white">&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("ScriptPage", false)
</body>
</html>
