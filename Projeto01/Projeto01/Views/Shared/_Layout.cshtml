@using Projeto01.Infraestrutura

<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/styles.css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <div class="col-md-4">
            @Html.ActionLink("Nome do aplicativo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#conteudoNavbarSuportado" aria-controls="conteudoNavbarSuportado" aria-expanded="false" aria-label="Alterna navegação">
            <span class="navbar-toggler-icon"></span>
          </button>
            </div>

        <div class="col-md-4">
            <div class="collapse navbar-collapse" id="conteudoNavbarSuportado">
                <ul class="navbar-nav mr-auto">
                    <li id="liHome" class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Categorias", new { area = "Tabelas" }, null)">Categorias</a>
                    </li>
                    <li id="liFabricantes" class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Fabricantes", new { area = "Cadastros" }, null)">Fabricantes</a>
                    </li>
                    <li id="liProdutos" class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Produtos", new { area = "Cadastros" }, null)">Produtos</a>
                    </li>
                     <li id="liUsuarios" class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Admin", new { area = "Seguranca" }, null)">Usuários</a>
                    </li>
                     <li id="liPapeis" class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "PapelAdmin", new { area = "Seguranca" }, null)">Papéis</a>
                    </li>
                </ul>
            </div>
            </div>

            <div class="col-md-4">

                <div style="text-align:right;" class="text-white font-weight-bold">
                    @{ 
                        if (Html.GetAuthenticatedUser().ToString() != "") {
                            @Html.GetAuthenticatedUser();
                            @* <a class="text-white-50 font-italic sair" href="@Url.Action(" - Sair", "Logout", "Account", null)"> - Sair</a> *@
                            <span class="">
                                @Html.ActionLink(" - Sair", "Logout", "Account", null, new { @class = "font-italic sair"})
                            </span>
                        } else
                        {
                            @Html.ActionLink("Acessar", "Login", "Account", new { area = "Seguranca" }, new { @class = "text-white"});
                        }
                     }
                </div>

            </div>



        </div>
    </div>


    <div class="container mt-5">
        @RenderBody()
        <hr />
        <footer class="navbar navbar-expand-lg navbar-dark bg-dark fixed-bottom d-flex justify-content-center">
            <p class="text-white">&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("ScriptPage", false)

    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>
</body>
</html>
