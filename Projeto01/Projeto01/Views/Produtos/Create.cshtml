@model Modelo.Cadastros.Produto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registrando um NOVO PRODUTO";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card border border-primary">
        <div class="card-header text-uppercase text-white font-weight-bold bg-primary">
            Registro de um NOVO PRODUTO
        </div>
        <div class="card-body">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control col-12" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DataCadastro, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.DataCadastro, new { htmlAttributes = new { @class = "form-control col-12", id = "datepicker" } })
                    @Html.ValidationMessageFor(model => model.DataCadastro, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CategoriaId, "Categoria", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.DropDownList("CategoriaId", null,
                   htmlAttributes: new
                        {
                       @class = "form-control col-12"
                        })
                    @Html.ValidationMessageFor(model => model.CategoriaId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FabricanteId, "Fabricante", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.DropDownList("FabricanteId", null, htmlAttributes: new { @class = "form-control col-12" })
                    @Html.ValidationMessageFor(model => model.FabricanteId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="card-footer bg-transparent">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar Produto" class="btn btn-danger" />
                @Html.ActionLink("Retornar para a listagem de PRODUTOS", "Index", null, new { @class = "btn btn-warning text-white" })
            </div>
        </div>
    </div>
}

@section styles{
    <link href="~/Scripts/jquery-ui-1.11.4/jquery-ui.css" rel="stylesheet" />
}

@section ScriptPage {
    <script src="~/Scripts/jquery-ui-1.11.4/jquery-ui.js"></script>
    @*<script src="~/Scripts/datepicker-pt-BR.js"></script>*@
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liProdutos').addClass("active");
            //$("#datepicker").datepicker();
        });
    </script>
}