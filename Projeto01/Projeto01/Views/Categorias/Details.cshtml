@model Modelo.Tabelas.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de um CATEGORIA";
}



<div class="card border border-primary">
    <div class="card-header text-uppercase text-white font-weight-bold bg-primary">
        Visualizando detalhes de uma CATEGORIA
    </div>
    <div class="card-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)

            <div class="input-group">
                @*<span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                    </span>*@
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Alterar", "Edit", new { id = Model.CategoriaId }, new { @class = "btn btn-info" })
        @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-info" })
    </div>
</div>

@Html.Partial("~/Views/Produtos/_PorFabricante.cshtml", Model.Produtos.ToList())


@section ScriptPage {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liHome').addClass("active");
        });
    </script>
}


